# CONSOLIDATED Environment Configuration per Advancia Pay patterns
# This is the SINGLE source of truth for evaluation environment variables

# Backend API Configuration
BACKEND_URL=http://localhost:4000

# Test User Credentials (non-production only)
# WARNING: Never use real user data in evaluations per PCI-DSS
TEST_EMAIL=evaltest@advancia.test
TEST_PASSWORD=EvalTest123!@#Secure
TEST_FIRSTNAME=Eval
TEST_LASTNAME=Test

# Admin Test User (for bypass tests)
ADMIN_EMAIL=evaladmin@advancia.test
ADMIN_PASSWORD=AdminTest123!@#Secure

# Test Configuration
BACKEND_TIMEOUT=30
MAX_RETRIES=3
TEST_DELAY=0.5

# Logging (Winston-style per Advancia Pay)
VERBOSE=false
DEBUG=false
LOG_LEVEL=INFO

# Optional: Error Tracking (Sentry)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Report Configuration
REPORT_FORMAT=json
REPORT_OUTPUT_DIR=results

# Security Thresholds (PCI-DSS aligned)
MIN_SECURITY_SCORE=80
PASSWORD_MIN_LENGTH=12
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=15

# Rate Limiting (must match backend/src/middleware/rateLimiter.ts)
AUTH_RATE_LIMIT=5
AUTH_RATE_WINDOW_SECONDS=900
SIGNUP_RATE_LIMIT=3
SIGNUP_RATE_WINDOW_SECONDS=3600
PAYMENT_RATE_LIMIT=10
PAYMENT_RATE_WINDOW_SECONDS=600

# Compliance
ENABLE_AUDIT_LOGGING=true
ENABLE_PII_SANITIZATION=true

# CI/CD
CI=false
CI_FAIL_ON_SCORE_BELOW=80
