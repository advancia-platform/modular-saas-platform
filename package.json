{
  "name": "modular-saas-platform",
  "version": "1.0.0",
  "description": "Modular SaaS Platform with Next.js Frontend and Express Backend",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "prepare": "husky install",
    "check": "npm run -s type-check && npm run -s lint && npm test",
    "sass": "sass styles/main.scss public/css/main.css",
    "sass:watch": "sass --watch styles/main.scss:public/css/main.css",
    "sass:build": "sass styles/main.scss public/css/main.css --style compressed",
    "template:build": "tsc --project tsconfig.template.json && npm run template:compile-css",
    "template:compile-css": "sass templates/template.scss templates/template.css --style compressed",
    "template:watch": "tsc --project tsconfig.template.json --watch",
    "template:serve": "live-server templates --port=8080",
    "docs:serve": "mkdocs serve --config-file mkdocs.yml",
    "docs:build": "mkdocs build --config-file mkdocs.yml",
    "docs:deploy": "mkdocs gh-deploy --config-file mkdocs.yml",
    "setup:docs": "pip install mkdocs-material mkdocs-minify-plugin mkdocs-git-revision-date-localized-plugin",
    "setup:quick": "npm install && cd backend && npm install && cd ../frontend && npm install && cd .. && npm run setup:docs",
    "prisma:generate": "cd backend && prisma generate",
    "prisma:migrate:dev": "cd backend && prisma migrate dev --name init",
    "prisma:migrate:deploy": "cd backend && prisma migrate deploy",
    "prisma:db:push": "cd backend && prisma db push",
    "deploy": "bash ./scripts/deploy.sh",
    "backup": "bash ./scripts/backup_db.sh",
    "dev": "concurrently --kill-others --restart-tries 3 --restart-after 2000 --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\" \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:safe": "concurrently --kill-others-on-fail --restart-tries 5 --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\" \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:fast": "concurrently --kill-others --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\" \"npm run dev:frontend\" \"cd backend && npm run dev:fast\"",
    "dev:debug": "concurrently --kill-others --names \"FRONTEND,BACKEND,LOGS\" --prefix-colors \"cyan,magenta,yellow\" \"npm run dev:frontend\" \"npm run dev:backend\" \"tail -f backend/logs/*.log || echo 'No logs yet'\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test --workspaces",
    "test:integration": "cd backend && npm run test:integration",
    "test:e2e": "cd frontend && npm run test:e2e",
    "lint": "npm run lint --workspaces",
    "lint:check": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "deps:check": "npm run deps:check --workspaces && npm ls --all --omit=dev",
    "deps:sync": "tsx scripts/sync-deps.ts",
    "type-check": "npm run type-check --workspaces",
    "build": "npm run build --workspaces",
    "fix": "npm run lint:fix --workspaces && npx prettier --write . && npm run type-check --workspaces",
    "debug": "node scripts/smart-debug.js",
    "debug:backend": "cd backend && node --inspect=9229 --loader tsx src/index.ts",
    "debug:frontend": "cd frontend && node --inspect=9230 node_modules/next/dist/bin/next dev",
    "debug:test": "cd backend && node --inspect-brk=9229 node_modules/.bin/jest --runInBand --no-cache",
    "debug:setup": "node scripts/smart-debug-setup.js",
    "format": "npx prettier --write .",
    "lint-staged": "lint-staged",
    "commit": "git-cz",
    "start": "cd frontend && npm start",
    "prepare": "node -e \"try { if (process.env.NODE_ENV !== 'production' && require('fs').existsSync('.git')) require('husky').install() } catch (e) {}\" && husky install",
    "docs:lint": "markdownlint-cli2",
    "markdown:lint": "markdownlint \"**/*.md\" --ignore node_modules --ignore \"**/node_modules/**\"",
    "markdown:fix": "markdownlint \"**/*.md\" --fix --ignore node_modules --ignore \"**/node_modules/**\"",
    "eval:install": "cd evaluation && pip install -r requirements.txt",
    "eval:run": "cd evaluation && python run_evaluation.py",
    "eval:password": "cd evaluation && python run_evaluation.py --test password --verbose",
    "eval:rate-limit": "cd evaluation && python run_evaluation.py --test rate_limit --verbose",
    "eval:lockout": "cd evaluation && python run_evaluation.py --test account_lockout --verbose",
    "eval:jwt": "cd evaluation && python run_evaluation.py --test jwt --verbose",
    "eval:report": "cd evaluation && python run_evaluation.py --report html",
    "eval:ci": "cd evaluation && python run_evaluation.py --report json --output results/ci-evaluation",
    "security:test": "npm run eval:run",
    "security:full": "npm run eval:install && npm run eval:run && npm run eval:report"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "saas",
    "nextjs",
    "express",
    "prisma",
    "docker"
  ],
  "author": "",
  "license": "MIT",
  "resolutions": {
    "typescript": "^5.9.3",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "pnpm": {
    "overrides": {
      "js-yaml": ">=4.1.1",
      "next": ">=14.2.32",
      "body-parser": ">=1.20.3",
      "path-to-regexp": ">=0.1.12",
      "express": ">=4.20.0",
      "cookie": ">=0.7.0",
      "send": ">=0.19.0",
      "serve-static": ">=1.16.0",
      "esbuild": ">=0.25.0"
    },
    "ignoredBuiltDependencies": [
      "argon2",
      "bcrypt"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/supertest": "^6.0.3",
    "artillery": "^2.0.27",
    "commitizen": "^4.3.1",
    "concurrently": "^9.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "jest-environment-jsdom": "^30.2.0",
    "lighthouse": "^13.0.1",
    "lint-staged": "^15.5.2",
    "markdownlint-cli": "^0.41.0",
    "markdownlint-cli2": "^0.14.0",
    "semver": "^7.6.3",
    "sharp": "^0.34.5",
    "tsx": "^4.16.2",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "redis": "^5.9.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ],
    "backend/**/*.md": [
      "markdownlint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
