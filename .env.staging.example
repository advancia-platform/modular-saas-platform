# Advancia Pay Ledger - Staging Environment Variables
# Copy this file to .env.staging and fill in the values

# ============================================
# DATABASE CONFIGURATION
# ============================================
STAGING_DB_USER=staging_user
STAGING_DB_PASSWORD=<GENERATE_SECURE_PASSWORD>
STAGING_DB_NAME=advancia_staging
STAGING_DATABASE_URL=postgresql://${STAGING_DB_USER}:${STAGING_DB_PASSWORD}@postgres-staging:5432/${STAGING_DB_NAME}

# ============================================
# REDIS CONFIGURATION
# ============================================
STAGING_REDIS_PASSWORD=<GENERATE_SECURE_PASSWORD>
STAGING_REDIS_URL=redis://:${STAGING_REDIS_PASSWORD}@redis-staging:6379

# ============================================
# JWT & AUTHENTICATION
# ============================================
STAGING_JWT_SECRET=<GENERATE_32_CHAR_SECRET>
STAGING_JWT_REFRESH_SECRET=<GENERATE_32_CHAR_SECRET>
STAGING_JWT_EXPIRES_IN=15m
STAGING_JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# APPLICATION URLs
# ============================================
STAGING_FRONTEND_URL=https://staging.advancia.com
STAGING_API_URL=https://staging-api.advancia.com
STAGING_GRAFANA_URL=https://staging-grafana.advancia.com

# ============================================
# EMAIL CONFIGURATION (Use test SMTP service)
# ============================================
STAGING_SMTP_HOST=smtp.mailtrap.io
STAGING_SMTP_PORT=587
STAGING_SMTP_USER=<YOUR_MAILTRAP_USER>
STAGING_SMTP_PASSWORD=<YOUR_MAILTRAP_PASSWORD>
STAGING_SMTP_FROM=noreply@staging.advancia.com

# ============================================
# MONITORING & LOGGING
# ============================================
STAGING_SENTRY_DSN=<YOUR_SENTRY_DSN>
STAGING_SENTRY_ENVIRONMENT=staging
LOG_LEVEL=debug

# ============================================
# PAYMENT GATEWAYS (Test Mode)
# ============================================
# Cryptomus
STAGING_CRYPTOMUS_API_KEY=<TEST_API_KEY>
STAGING_CRYPTOMUS_MERCHANT_ID=<TEST_MERCHANT_ID>
STAGING_CRYPTOMUS_WEBHOOK_SECRET=<TEST_WEBHOOK_SECRET>

# Stripe
STAGING_STRIPE_SECRET_KEY=sk_test_<YOUR_TEST_KEY>
STAGING_STRIPE_PUBLISHABLE_KEY=pk_test_<YOUR_TEST_KEY>
STAGING_STRIPE_WEBHOOK_SECRET=whsec_<YOUR_TEST_WEBHOOK_SECRET>

# ============================================
# GRAFANA
# ============================================
STAGING_GRAFANA_USER=admin
STAGING_GRAFANA_PASSWORD=<GENERATE_SECURE_PASSWORD>

# ============================================
# GOOGLE ANALYTICS (Staging)
# ============================================
STAGING_GA_ID=G-XXXXXXXXXX

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_RATE_LIMITING=true
ENABLE_TEST_LOGGING=true

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CLOUDFLARE (Optional)
# ============================================
STAGING_CLOUDFLARE_API_KEY=<YOUR_API_KEY>
STAGING_CLOUDFLARE_EMAIL=<YOUR_EMAIL>
STAGING_CLOUDFLARE_ZONE_ID=<YOUR_ZONE_ID>

# ============================================
# BACKUP CONFIGURATION
# ============================================
STAGING_BACKUP_ENABLED=true
STAGING_BACKUP_SCHEDULE=0 2 * * *
STAGING_BACKUP_RETENTION_DAYS=7
STAGING_BACKUP_S3_BUCKET=advancia-staging-backups
STAGING_BACKUP_S3_REGION=us-east-1

# ============================================
# CORS CONFIGURATION
# ============================================
STAGING_CORS_ORIGIN=https://staging.advancia.com,https://staging-api.advancia.com

# ============================================
# SESSION CONFIGURATION
# ============================================
STAGING_SESSION_SECRET=<GENERATE_32_CHAR_SECRET>
STAGING_SESSION_TIMEOUT=3600000

# ============================================
# ADMIN CREDENTIALS (Initial Setup)
# ============================================
STAGING_ADMIN_EMAIL=admin@staging.advancia.com
STAGING_ADMIN_PASSWORD=<GENERATE_SECURE_PASSWORD>
STAGING_ADMIN_FIRST_NAME=Admin
STAGING_ADMIN_LAST_NAME=Staging
