# ðŸ“„ .env.production.example
# Copy this to .env.production and fill in real values
# NEVER commit .env.production - it's in .gitignore

# ==========================================
# Database Configuration
# ==========================================
DATABASE_URL=postgres://<USERNAME>:<PASSWORD>@<HOST>:5432/<DB_NAME>

# ==========================================
# Authentication & Security
# ==========================================
JWT_SECRET=<REDACTED_SECRET_KEY>
JWT_REFRESH_SECRET=<REDACTED_REFRESH_SECRET_KEY>
SESSION_SECRET=<REDACTED_SESSION_KEY>
API_KEY=<REDACTED_API_KEY>

# ==========================================
# Payment Integration - Stripe
# ==========================================
STRIPE_SECRET_KEY=<YOUR_STRIPE_SECRET_KEY>
STRIPE_PUBLIC_KEY=<YOUR_STRIPE_PUBLIC_KEY>
STRIPE_WEBHOOK_SECRET=<YOUR_STRIPE_WEBHOOK_SECRET>

# ==========================================
# Monitoring & Error Tracking
# ==========================================
SLACK_WEBHOOK_URL=<YOUR_SLACK_WEBHOOK_URL>
SENTRY_DSN=<YOUR_SENTRY_DSN>

# ==========================================
# Cloud Storage - Cloudflare R2
# ==========================================
CLOUDFLARE_ACCOUNT_ID=<YOUR_CLOUDFLARE_ACCOUNT_ID>
CLOUDFLARE_R2_ACCESS_KEY_ID=<YOUR_R2_ACCESS_KEY_ID>
CLOUDFLARE_R2_SECRET_ACCESS_KEY=<YOUR_R2_SECRET_ACCESS_KEY>
CLOUDFLARE_R2_BUCKET=<YOUR_R2_BUCKET_NAME>
CLOUDFLARE_R2_ENDPOINT=https://<YOUR_ACCOUNT_ID>.r2.cloudflarestorage.com

# Legacy AWS S3 (if still needed for backups)
AWS_ACCESS_KEY_ID=<YOUR_AWS_ACCESS_KEY>
AWS_SECRET_ACCESS_KEY=<YOUR_AWS_SECRET_KEY>
S3_BACKUPS_BUCKET=<YOUR_BACKUP_BUCKET_NAME>
AWS_REGION=us-east-1

# ==========================================
# Email Services
# ==========================================
EMAIL_USER=<YOUR_EMAIL_ADDRESS>
EMAIL_PASSWORD=<YOUR_EMAIL_APP_PASSWORD>
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# ==========================================
# Crypto Payment Integration
# ==========================================
CRYPTOMUS_API_KEY=<YOUR_CRYPTOMUS_API_KEY>
CRYPTOMUS_MERCHANT_ID=<YOUR_CRYPTOMUS_MERCHANT_ID>

# ==========================================
# Web Push Notifications
# ==========================================
VAPID_PUBLIC_KEY=<YOUR_VAPID_PUBLIC_KEY>
VAPID_PRIVATE_KEY=<YOUR_VAPID_PRIVATE_KEY>

# ==========================================
# Deployment URLs
# ==========================================
BACKEND_URL_PROD=https://<YOUR_BACKEND_DOMAIN>
FRONTEND_URL_PROD=https://<YOUR_FRONTEND_DOMAIN>
ALLOWED_ORIGINS=https://<YOUR_FRONTEND_DOMAIN>,https://<YOUR_BACKEND_DOMAIN>

# ==========================================
# Feature Flags
# ==========================================
FF_GRAPHQL=false
FF_NEW_PAGINATION=false
FF_ADVANCED_ANALYTICS=false
FF_EXPERIMENTAL_FEATURES=false

# ==========================================
# Node Environment
# ==========================================
NODE_ENV=production
PORT=4000

# ==========================================
# Redis (if used)
# ==========================================
REDIS_URL=redis://<HOST>:6379

# ==========================================
# Analytics
# ==========================================
NEXT_PUBLIC_GA_TRACKING_ID=<YOUR_GA_ID_HERE>

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
