# AI DevOps Agent Environment Configuration
# Copy this file to .env and update values as needed

# OpenAI API Configuration (optional for demo)
OPENAI_API_KEY=demo-mode-no-key-needed

# Database Configuration
POSTGRES_USER=agent
POSTGRES_PASSWORD=securepass
POSTGRES_DB=agentdb
DATABASE_URL=postgresql://agent:securepass@postgres:5432/agentdb

# Redis Configuration
REDIS_URL=redis://redis:6379

# Monitoring Configuration
PROMETHEUS_RETENTION_TIME=30d
GRAFANA_ADMIN_PASSWORD=admin

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG=false

# Security Configuration (Update for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-32-character-encryption-key

# External Services (Optional)
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=

# Load Testing Configuration
LOAD_TEST_CONCURRENT_REQUESTS=3
LOAD_TEST_TOTAL_REQUESTS=15

# Demo Mode Configuration
DEMO_MODE=true
MOCK_AI_RESPONSES=true
SKIP_EXTERNAL_APIS=true
