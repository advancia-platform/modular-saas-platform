{
  "info": {
    "name": "Advancia Lockout & Recovery Tests",
    "description": "Automated tests for login, TOTP, backup codes, and lockout policy verification",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "advancia-lockout-tests",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwtToken}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global pre-request script",
          "console.log('Running request:', pm.info.requestName);"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global test script",
          "console.log('Request completed:', pm.info.requestName);"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "1. Health Check",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response has ok property', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('ok');",
              "    pm.expect(jsonData.ok).to.be.true;",
              "});",
              "",
              "console.log('✓ Backend is healthy');"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health"]
        },
        "description": "Verify backend is running and responsive"
      },
      "response": []
    },
    {
      "name": "2. Admin Login (Valid TOTP)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response has token', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('token');",
              "    pm.environment.set('jwtToken', jsonData.token);",
              "    console.log('✓ JWT token saved to environment');",
              "});",
              "",
              "pm.test('Response has user data', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('user');",
              "    pm.expect(jsonData.user.role).to.equal('admin');",
              "});",
              "",
              "console.log('✓ Admin login successful with TOTP');"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/admin-login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "admin-login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPassword}}\",\n  \"token\": \"{{validTOTP}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "description": "Admin login with valid TOTP token from authenticator app"
      },
      "response": []
    },
    {
      "name": "3. Failed Login Attempt 1",
      "event": [
